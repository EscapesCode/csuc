<%- include('partials/headerAdmin.ejs') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1>List User</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-striped">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">No</th>
                            <th scope="col">Nama</th>
                            <th scope="col">password</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let i=1 %>
                            <% for (data of result) { %>
                                <tr>
                                    <th scope="row">
                                        <%= i %>
                                    </th>
                                    <td>
                                        <%= data.username %>
                                    </td>
                                    <td>
                                        <%= data.password %>
                                    </td>
                                    <td>
                                        <a href="/admin/user/hapus/<%= data.id %>" class="btn btn-danger">Hapus</a>
                                    </td>
                                    <% i++ %>
                                </tr>
                                <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('partials/footerAdmin.ejs') %>